{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "allowJs": true,
    "sourceMap": true,
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "lib": [ "es2015", "es2015.iterable", "dom" ],
    "outDir": "wwwroot/src/"
  },
  "include": [ "Scripts/**/*" ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
